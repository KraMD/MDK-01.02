using namespace std;
#include <iostream>
#include <math.h>
main ()
{
float x1,x2,x3,y1,y2,y3,z1,z2,z3,a1,a2,a3,d,b1,b2,b3,f1,f2,f3,h,h1,h2,h3,p,p1,p2,p3,m,s;
cout<<"\n vvedite coordinati";
cout<<"\n";
cin>>x1>>x2>>x3>>y1>>y2>>y3;
z1=x2-x1;
a1=y2-y1;
z2=x3-x2;
a2=y3-y2;
z3=x1-x3;
a3=y1-y3;
z1=abs(z1);
z2=abs(z2);
z3=abs(z3);
a1=abs(a1);
a2=abs(a2);
a3=abs(a3);
d=2;
z1=pow(z1,d);
z2=pow(z2,d);
z3=pow(z3,d);
a1=pow(a1,d);
a2=pow(a2,d);
a3=pow(a3,d);
b1=z1+a1;
b2=z2+a2;
b3=z3+a3;
f1=sqrt(b1);
f2=sqrt(b2);
f3=sqrt(b3);
h=f1+f2+f3;
p=h/2;
p1=p-h1;
p2=p-h2;
p3=p-h3;
m=p*p1*p2*p3;
s=sqrt(m);
cout<<"S="<<s;
cout<<"\n";
system("pause");
return 0;
}
